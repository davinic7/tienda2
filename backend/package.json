{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API para sistema POS multi-local",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "postinstall": "prisma generate",
    "prestart": "prisma db push --skip-generate && npm run db:seed",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "socket.io": "^4.6.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
  }
}
